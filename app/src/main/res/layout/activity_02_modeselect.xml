<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/modeselect_text_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Select Game Mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/modeselect_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best of 3"
        app:layout_constraintBottom_toTopOf="@+id/modeselect_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modeselect_text_01" />

    <Button
        android:id="@+id/modeselect_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best of 5"
        app:layout_constraintBottom_toTopOf="@+id/modeselect_other_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modeselect_text_01" />

    <Button
        android:id="@+id/modeselect_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best of 10"
        app:layout_constraintBottom_toTopOf="@+id/modeselect_other_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modeselect_5" />

    <Button
        android:id="@+id/modeselect_other_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Other"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>