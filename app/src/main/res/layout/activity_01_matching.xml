<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/matching_notif_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold your phone against your opponent's phone."
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/matching_notif_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint: Activate NFC."
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matching_notif_01"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/temp_notif_01"
        android:layout_width="229dp"
        android:layout_height="21dp"
        android:text="RIGHT NOW: Player vs. Computer"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matching_notif_02" />
</androidx.constraintlayout.widget.ConstraintLayout>