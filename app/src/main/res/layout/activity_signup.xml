<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#9DC3E6"
    tools:context=".ui.Security.SignupActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="601dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/comic_neue"
            android:padding="8dp"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="#843C0C"
            android:textSize="28sp"/>

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:fontFamily="@font/comic_neue"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:hint="E-Mail"
            android:textColor="#843C0C"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawableTint="#843C0C"
            android:textCursorDrawable="@null"
            android:textColorHint="#9DC3E6"
             />

        <EditText
            android:id="@+id/signup_password"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:fontFamily="@font/comic_neue"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#843C0C"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawableTint="#843C0C"
            android:textCursorDrawable="@null"
            android:textColorHint="#9DC3E6"
             />

        <EditText
            android:id="@+id/signup_confirm"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:fontFamily="@font/comic_neue"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="#843C0C"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawableTint="#843C0C"
            android:textCursorDrawable="@null"
            android:textColorHint="#9DC3E6"
             />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#DEEBF7"
            android:fontFamily="@font/comic_neue"
            android:drawableRight="@drawable/baseline_check_24"
            android:drawableTint="#9DC3E6"
            android:text="Sign Up"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#9DC3E6"
            android:padding="8dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            app:strokeColor="#843C0C"
            app:strokeWidth="2dp"/>

        <Button
            android:id="@+id/login_redirect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DEEBF7"
            android:fontFamily="@font/comic_neue"
            android:text="Already a user? Login"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#9DC3E6"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            app:strokeColor="#843C0C"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/to_home_redirect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DEEBF7"
            android:fontFamily="@font/comic_neue"
            android:text="Home"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#843C0C"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_redirect_button"
            app:strokeColor="#843C0C"
            app:strokeWidth="2dp" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>